{
  "compilerOptions": {
    "target": "ES2017",
    "module": "ES2020",
    "moduleResolution": "Bundler",
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "outDir": "./public/build",
    "rootDir": "./src",
    "resolveJsonModule": true,
    "noEmitOnError": false,
    "lib": ["DOM", "ES2020"],
    "jsx": "react" 
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "public"]
}

