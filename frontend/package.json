{
  "name": "todo-frontend",
  "version": "1.0.0",
  "private": true,
  "description": "A responsive, accessible Todo app using TailwindCSS with localStorage persistence.",
  "scripts": {
    "dev": "concurrently \"npm:dev:css\" \"npm:dev:ts\"",
    "dev:css": "tailwindcss -i ./src/styles/main.css -o ./public/styles.css --watch",
    "dev:ts": "tsc -w -p tsconfig.json",
    "build": "npm run build:css && npm run build:ts",
    "build:css": "tailwindcss -i ./src/styles/main.css -o ./public/styles.css --minify",
    "build:ts": "tsc -p tsconfig.json",
    "type-check": "tsc -p tsconfig.json --noEmit"
  },
  "devDependencies": {
    "@types/react": "^18.3.5",
    "@types/react-dom": "^18.3.0",
    "autoprefixer": "^10.4.20",
    "concurrently": "^9.0.1",
    "postcss": "^8.4.41",
    "tailwindcss": "^3.4.10",
    "typescript": "^5.6.2"
  }
}
